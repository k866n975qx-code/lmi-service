{
  "openapi": "3.1.0",
  "info": {
    "title": "mira-service API",
    "version": "1.0.0",
    "description": "Actions schema for snapshot retrieval, diffs, and status."
  },
  "servers": [
    {
      "url": "https://mira.joseai.dev"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "operationId": "getHealth",
        "summary": "Health check",
        "description": "Returns service and DB connectivity plus last run metadata.",
        "responses": {
          "200": {
            "description": "Health status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/cache/{action}": {
      "post": {
        "operationId": "cacheAdmin",
        "summary": "Cache admin",
        "description": "Invalidate or backfill the local cache.",
        "parameters": [
          {
            "name": "action",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["invalidate", "backfill"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cache admin result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CacheAdminResponse"
                }
              }
            }
          }
        }
      }
    },
    "/sync-all": {
      "post": {
        "operationId": "syncAll",
        "summary": "Trigger sync",
        "description": "Starts the sync pipeline in the background and returns the run_id.",
        "responses": {
          "202": {
            "description": "Sync run created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SyncRun"
                }
              }
            }
          },
          "200": {
            "description": "Sync run created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SyncRun"
                }
              }
            }
          }
        }
      }
    },
    "/status/{run_id}": {
      "get": {
        "operationId": "getRunStatus",
        "summary": "Get sync status",
        "description": "Return status for a given run_id.",
        "parameters": [
          {
            "name": "run_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Run status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatusResponse"
                }
              }
            }
          }
        }
      }
    },
    "/summaries/available": {
      "get": {
        "operationId": "listAvailablePeriodSummaries",
        "summary": "List available summaries",
        "description": "Lists stored daily dates and period summaries.",
        "parameters": [
          {
            "name": "snapshot_type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["daily", "weekly", "monthly", "quarterly", "yearly"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Available summaries",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SnapshotsAvailableResponse"
                }
              }
            }
          }
        }
      }
    },
    "/portfolio/daily/latest": {
      "get": {
        "operationId": "getLatestDailyPortfolio",
        "summary": "Get latest daily portfolio",
        "description": "Returns the most recent daily portfolio snapshot.",
        "parameters": [
          {
            "name": "slim",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Daily portfolio payload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SnapshotResponse"
                }
              }
            }
          }
        }
      }
    },
    "/portfolio/daily/{as_of}": {
      "get": {
        "operationId": "getDailyPortfolio",
        "summary": "Get daily portfolio by date",
        "description": "Returns a daily portfolio snapshot for the given date.",
        "parameters": [
          {
            "name": "as_of",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "slim",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Daily portfolio payload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SnapshotResponse"
                }
              }
            }
          }
        }
      }
    },
    "/period-summary/{kind}/{as_of}": {
      "get": {
        "operationId": "getPeriodSummary",
        "summary": "Get stored period summary by as-of date",
        "description": "Returns a persisted period summary.",
        "parameters": [
          {
            "name": "kind",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["weekly", "monthly", "quarterly", "yearly"]
            }
          },
          {
            "name": "as_of",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "slim",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Period summary payload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SnapshotResponse"
                }
              }
            }
          }
        }
      }
    },
    "/period-summary/{kind}/{as_of}/{mode}": {
      "get": {
        "operationId": "getPeriodSummaryMode",
        "summary": "Get period summary (final or to-date)",
        "description": "Returns a period summary in final or to_date mode.",
        "parameters": [
          {
            "name": "kind",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["weekly", "monthly", "quarterly", "yearly"]
            }
          },
          {
            "name": "as_of",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "mode",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["to_date", "final"]
            }
          },
          {
            "name": "slim",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Period summary payload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SnapshotResponse"
                }
              }
            }
          }
        }
      }
    },
    "/compare/daily/{left_date}/{right_date}": {
      "get": {
        "operationId": "compareDailyPortfolios",
        "summary": "Compare two daily portfolios",
        "description": "Returns a daily comparison.",
        "parameters": [
          {
            "name": "left_date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "right_date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Daily comparison payload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DiffResponse"
                }
              }
            }
          }
        }
      }
    },
    "/compare/period/{kind}/{left_as_of}/{right_as_of}": {
      "get": {
        "operationId": "comparePeriodSummaries",
        "summary": "Compare two period summaries",
        "description": "Returns a period comparison.",
        "parameters": [
          {
            "name": "kind",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["weekly", "monthly", "quarterly", "yearly"]
            }
          },
          {
            "name": "left_as_of",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "right_as_of",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Period comparison payload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DiffResponse"
                }
              }
            }
          }
        }
      }
    },
    "/logs": {
      "get": {
        "operationId": "readLogs",
        "summary": "Read error logs",
        "description": "Returns the last N lines from the error log file.",
        "parameters": [
          {
            "name": "lines",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 2000,
              "default": 200
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Log lines",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LogsResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean"
          },
          "db": {
            "type": "string"
          },
          "last_run": {
            "anyOf": [
              {
                "$ref": "#/components/schemas/LastRun"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "required": ["ok", "db"]
      },
      "LastRun": {
        "type": "object",
        "properties": {
          "run_id": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "started_at_utc": {
            "type": "string",
            "format": "date-time"
          },
          "finished_at_utc": {
            "type": ["string", "null"],
            "format": "date-time"
          }
        },
        "required": ["run_id", "status", "started_at_utc"]
      },
      "CacheAdminResponse": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean"
          },
          "cleared": {
            "type": "boolean"
          },
          "backfill": {
            "type": "string"
          }
        },
        "required": ["ok"]
      },
      "SyncRun": {
        "type": "object",
        "properties": {
          "run_id": {
            "type": "string"
          }
        },
        "required": ["run_id"]
      },
      "StatusResponse": {
        "type": "object",
        "properties": {
          "run_id": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["running", "succeeded", "failed"]
          },
          "started_at_utc": {
            "type": "string",
            "format": "date-time"
          },
          "finished_at_utc": {
            "type": ["string", "null"],
            "format": "date-time"
          },
          "error_message": {
            "type": ["string", "null"]
          }
        },
        "required": ["run_id", "status", "started_at_utc"]
      },
      "SnapshotsAvailableResponse": {
        "type": "object",
        "properties": {
          "daily": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "date"
            }
          },
          "period": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PeriodSnapshotSummary"
            }
          }
        },
        "required": ["daily", "period"]
      },
      "PeriodSnapshotSummary": {
        "type": "object",
        "properties": {
          "period_type": {
            "type": "string",
            "enum": ["WEEK", "MONTH", "QUARTER", "YEAR"]
          },
          "start_date": {
            "type": "string",
            "format": "date"
          },
          "end_date": {
            "type": "string",
            "format": "date"
          },
          "snapshot_id": {
            "type": "string"
          },
          "created_at_utc": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["period_type", "start_date", "end_date", "snapshot_id", "created_at_utc"]
      },
      "SnapshotResponse": {
        "type": "object",
        "properties": {},
        "additionalProperties": true
      },
      "DiffResponse": {
        "type": "object",
        "properties": {},
        "additionalProperties": true
      },
      "LogsResponse": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "lines": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["path", "lines"]
      }
    }
  }
}
